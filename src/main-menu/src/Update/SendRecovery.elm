module Update.SendRecovery exposing (apply_to)
-- Elm -------------------------------------------------------------------------

-- Map -------------------------------------------------------------------
import Comm.SendRecovery

import Struct.Event
import Struct.Model

--------------------------------------------------------------------------------
-- LOCAL -----------------------------------------------------------------------
--------------------------------------------------------------------------------

--------------------------------------------------------------------------------
-- EXPORTED --------------------------------------------------------------------
--------------------------------------------------------------------------------
apply_to : (
      Struct.Model.Type ->
      (Struct.Model.Type, (Cmd Struct.Event.Type))
   )
apply_to model =
   (
      model,
      (case (Comm.SendRecovery.try model) of
         (Just cmd) -> cmd
         Nothing -> Cmd.none
      )
   )

