apply_to : (
      Struct.Model.Type ->
      Struct.Toolbox.Mode ->
      (Struct.Model.Type, (Cmd Struct.Event.Type))
   )
apply_to model mode =
   (
      {model | toolbox = (Struct.Toolbox.set_mode mode model.toolbox)},
      Cmd.none
   )
