init : (Model.Type, (Cmd Event.Type))
init =
   let
      model = (Shim.Model.generate)
   in
      (
         model,
         (case (Send.LoadBattlemap.try model) of
            (Just cmd) -> cmd
            Nothing -> Cmd.none
         )
      )
