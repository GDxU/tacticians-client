module Update.SwitchTeam exposing (apply_to)
-- Elm -------------------------------------------------------------------------

-- Battlemap -------------------------------------------------------------------
import Struct.Model
import Struct.Event

--------------------------------------------------------------------------------
-- LOCAL -----------------------------------------------------------------------
--------------------------------------------------------------------------------

--------------------------------------------------------------------------------
-- EXPORTED --------------------------------------------------------------------
--------------------------------------------------------------------------------
apply_to : (
      Struct.Model.Type ->
      (Struct.Model.Type, (Cmd Struct.Event.Type))
   )
apply_to model =
   if (model.player_id == "0")
   then
      (
         (Struct.Model.reset
            {model |
               player_id = "1"
            }
            model.characters
         ),
         Cmd.none
      )
   else
      (
         (Struct.Model.reset
            {model |
               player_id = "0"
            }
            model.characters
         ),
         Cmd.none
      )
