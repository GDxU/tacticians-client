from_int : Int -> Int -> Int -> Battlemap.Tile.Type
from_int map_width index i =
   let
      location =
         (Battlemap.Location.get_ref
            {
               x = (index % map_width),
               y = (index // map_width)
            }
         )
   in
      if (i >= 10)
      then
         {
            location = location,
            floor_level = (i - 10),
            nav_level = Battlemap.Direction.None,
            char_level = (Just (toString (i - 10))),
            mod_level = Nothing
         }
      else
         {
            location = location,
            floor_level = i,
            nav_level = Battlemap.Direction.None,
            char_level = Nothing,
            mod_level = Nothing
         }


